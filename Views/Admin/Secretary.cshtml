@model university_project.Models.NewUser

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h1>Create</h1>

    <h4>Professor</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Secretary" asp-controller="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Secretary.Name" class="control-label"></label>
                    <input asp-for="Secretary.Name" class="form-control" />
                    <span asp-validation-for="Secretary.Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Secretary.Surname" class="control-label"></label>
                    <input asp-for="Secretary.Surname" class="form-control" />
                    <span asp-validation-for="Secretary.Surname" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Secretary.Phonenumber" class="control-label"></label>
                    <input asp-for="Secretary.Phonenumber" type="tel" class="form-control" />
                    <span asp-validation-for="Secretary.Phonenumber" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Secretary.Department" class="control-label"></label>
                    <select asp-for="Secretary.Department" asp-items="Model.SelectDepartment" class="form-select" aria-label="-"></select>
                    <span asp-validation-for="Secretary.Department" class="text-danger"></span>
                </div>
                <div class="form-group d-flex mt-3 gap-3">

                    <button type="submit" class="btn btn-primary">Create</button>
                    <div class="align-self-center">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
