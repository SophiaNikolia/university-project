@model university_project.ViewModels.RegisterCourseData

@{
    ViewData["Title"] = "Register Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Register</h1>

    <h4>Course</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Secretary" asp-action="RegisterCourse" method="post" class="d-flex flex-column gap-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Professors's AFM</label>
                    <input asp-for="ProfessorAfm" type="tel" class="form-control" />
                    <span asp-validation-for="ProfessorAfm" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="IdCourse" class="control-label"></label>
                    <select asp-for="IdCourse" asp-items="Model.SelectCourse" class="form-select" aria-label="-"></select>
                    <span asp-validation-for="IdCourse" class="text-danger"></span>
                </div>
                <div class="form-group d-flex mt-3 gap-3">
                    <button type="submit" class="btn btn-primary">Change</button>
                    <div class="align-self-center">
                        <a asp-controller="Dashboard" asp-action="Secretary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
